; □ 0 失敗
@KOJO_1_0_SYSTEM_MESSAGE_1_5_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_1_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_1_0_ADD_MESSAGE, @"「にがしてくれないみたい♥」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「おいかけてきてぇ……♥　えんじになにするつもりなのぉ♥」\n"
	CASE "発情"
		CALL KOJO_1_0_ADD_MESSAGE, @"「う……　あたまぽわぽわしてうまくはしれない……♥」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「やだやだ！　こないで……っ♥」\n"
	CASEELSE
		CALL KOJO_1_0_ADD_MESSAGE, @"「かけっこでまけた……」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「しょくしゅさんしつこいー！」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「こないでー！」\n"
	ENDSELECT
RETURN 1


; □ 1 成功
@KOJO_1_0_SYSTEM_MESSAGE_1_5_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_1_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_1_0_ADD_MESSAGE, @"「……にげきれちゃった……♥」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「つかまったらどうなっちゃうんだろ……♥」\n\d%CALLNAME:TARGET%%TACHI()%は触手が追ってきた方を見つめている……\d\n"
	CASE "発情"
		CALL KOJO_1_0_ADD_MESSAGE, @"「うー……　なんとかなった……♥」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「はー……♥　はー……♥」\n"
	CASEELSE
		IF BASE:MP >= (MAXBASE:MP / 4)
			CALL KOJO_1_0_ADD_MESSAGE, @"「にげきれたー！」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「はー……　はー……　もうこない……？」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「もうかえりたいー……」\n"
		ELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「あー……　あぶなかった……」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「よか……　よかった……　はー……　はー……」\n"
		ENDIF
	ENDSELECT
RETURN 1
