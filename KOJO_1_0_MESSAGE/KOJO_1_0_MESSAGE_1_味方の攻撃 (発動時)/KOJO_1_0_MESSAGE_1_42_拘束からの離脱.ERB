; 拘束からの離脱
; □ 3 少しだけ脱出
; ◆ 汎用口上
@KOJO_1_0_SYSTEM_MESSAGE_1_42_X_3(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 敵種族別口上呼び出し
	CALL KOJO_1_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, @"KOJO_1_0_SYSTEM_MESSAGE_1_42_X_3_ENEMY_{DA:(ARG:4):0}")
	SIF KOJO_1_0_GET_IMPORTANT_FLAG()
		RETURN 1

	; 拘束
	IF !ARG:2
		SELECTCASE KOJO_1_KOJO_MODE
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「ちょっと……　ゆるくなった？」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「はーなーしーてー！」\n"
		ENDSELECT

	; 丸呑み
	ELSE
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"「あつい……♥　だっしゅつしないと……♥」\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「とかされるまえに……！」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「すべって……　もうちょっとなのに……」\n"
		ENDSELECT
	ENDIF
RETURN 1

