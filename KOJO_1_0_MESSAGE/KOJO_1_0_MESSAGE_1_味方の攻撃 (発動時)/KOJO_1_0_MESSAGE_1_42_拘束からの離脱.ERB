@KOJO_1_0_SYSTEM_MESSAGE_1_42_X_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_1_KOJO_MODE
	CASEELSE
