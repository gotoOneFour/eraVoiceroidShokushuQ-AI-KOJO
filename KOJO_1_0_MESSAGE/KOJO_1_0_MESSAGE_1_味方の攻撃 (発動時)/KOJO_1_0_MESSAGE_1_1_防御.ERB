
; ------------------------------------------------------------------------------
; ■ 1 味方の攻撃 (発動時) - 1 防御
; ------------------------------------------------------------------------------

@KOJO_1_0_SYSTEM_MESSAGE_1_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_1_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_1_0_ADD_MESSAGE, @"「こわあい♥」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「アイちゃんはそんなにすぐにやられてあげませんよ♥」\n"
	CASE "発情"
		CALL KOJO_1_0_ADD_MESSAGE, @"（からだがあついよお……）\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「いまはちょっとまずいです……♥」\n"
;	CASE "強気"
;		CALL KOJO_1_0_ADD_MESSAGE, @"\n"
;		CALL KOJO_1_0_ADD_MESSAGE, @"\n"
	CASEELSE
		CALL KOJO_1_0_ADD_MESSAGE, @"「ふええ……まもらなきゃ……」\n"
		CALL KOJO_1_0_ADD_MESSAGE, @"「いたいのはにがてです……」\n"
	ENDSELECT


	; 拘束中なら追加口上
	IF CFLAG:20
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「やだあ……♥　はなしてえ……♥」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"（こんなにちっちゃいよーちえんじになにされちゃうんだろ……♥）\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（からだあついのにはなしてくれない……♥）\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"（あたまぽーっとしてうまくまもれないよお……♥）\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"（うう……）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「とりあえずまもらなきゃ……」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"「すきをうかがって……」\n"
			CALL KOJO_1_0_ADD_MESSAGE, @"（どうしよどうしよ……！）\n"
		ENDSELECT
	ENDIF


	; 部屋の汚染度による追加口上
	SELECTCASE BATTLE_POLUTION()
	; 敵が苦しむ程度
	CASE 0, 1
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「このままじゃえっちされるまえにじめつしちゃうかな♥　がんばって♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"「かららがあついし、いまはまもるべきですね……♥」\n"
;		CASE "強気"
;			CALL KOJO_1_0_ADD_MESSAGE, @"\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"（まもってるだけでかてるかな……？）\n"
		ENDSELECT

	; 敵が回復する程度
	CASE 3, 4
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「しょくしゅさんがげんきになってる……♥　こわい♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（まもってていいのかな……♥）\n"
;		CASE "強気"
;			CALL KOJO_1_0_ADD_MESSAGE, @"（こっちが身体を休めるより、相手の回復のが早いですね）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"（うねうねしてる……）\n"
		ENDSELECT

	; 汚染度MAX
	CASE 5
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「きちゃう♥　しょくしゅさんがアイちゃんに♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（ちょっとやばそうかな……♥）\n"
;		CASE "強気"
;			CALL KOJO_1_0_ADD_MESSAGE, @"「相手が有利な場所で戦い続けるのは、良くないですね」\n"
;			CALL KOJO_1_0_ADD_MESSAGE, @"（相手の縄張りで、じっと動かないのは悪手ですね）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"（うう……じりひんかもしれないです……）\n"
		ENDSELECT
	ENDSELECT


	; 残りMP参照 追加口上
	; 残りMP 100%
	IF BASE:1 == MAXBASE:1
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「ほらほら、げんきなえんじがここにいますよ♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（なんとかうずうずをなおさないと……♥）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"（このしょくしゅさん、なにをしてくるんだろ……？）\n"
		ENDSELECT

	; 残りMP 66%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 66)
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「まだまだえっちしてほしいなあ……♥　それまでたおさないようにしなきゃ……♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（……♥）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「とりあえずようすみしなきゃ」\n"
		ENDSELECT

	; 残りMP 33%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 33)
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"（そろそろめちゃくちゃにされちゃうかも……♥）\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"「からだはうずくし、そろそろあとがないかも……♥」\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「うう……どうしよどうしよ、このままじゃ……」\n"
		ENDSELECT

	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
		SELECTCASE KOJO_1_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_1_0_ADD_MESSAGE, @"「はー♥　はー♥　またしょくしゅさんにいっぱいえっちされちゃう♥」\n"
		CASE "発情"
			CALL KOJO_1_0_ADD_MESSAGE, @"（やばいやばい……このままじゃほんとうに♥）\n"
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「もうこれいじょうはたえられません……」\n"
		ENDSELECT
	ENDIF
RETURN 1
