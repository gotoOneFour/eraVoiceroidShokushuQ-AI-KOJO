; □ 54 着替えセット
@KOJO_1_0_SYSTEM_MESSAGE_1_2_54(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 自分が着替える
	IF ARG:3 == TARGET
		; 服状態による口上分岐
		; 新品だった
		IF BASE:(ARG:3):3 == MAXBASE:(ARG:3):3

		; 破れていたor裸だった
		ELSE
			SELECTCASE KOJO_1_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_1_0_ADD_MESSAGE, @"「もうみせてあげません♥」\n"
			CASEELSE
				CALL KOJO_1_0_ADD_MESSAGE, @"「ひとりでおきがえ、できるようになっててよかった！」\n"
				CALL KOJO_1_0_ADD_MESSAGE, @"「おきがえしなきゃ」\n"
			ENDSELECT
		ENDIF

	; 他キャラに着替えセットを使う
	ELSE
		; 服状態による口上分岐
		; 新品だった
		IF BASE:(ARG:3):3 == MAXBASE:(ARG:3):3

		; 破れていたor裸だった
		ELSE
			SELECTCASE KOJO_1_KOJO_MODE
			CASEELSE
				CALL KOJO_1_0_ADD_MESSAGE, @"「おようふく、どうぞ！」\n"
			ENDSELECT
		ENDIF
	ENDIF
RETURN 1
