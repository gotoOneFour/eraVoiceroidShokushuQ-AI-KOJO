; □ XX 通常攻撃 汎用口上
@KOJO_1_0_SYSTEM_MESSAGE_1_BULLET_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 汎用攻撃口上を読み込む
	CALL KOJO_1_0_SYSTEM_MESSAGE_1_VERSATILE_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_1_0_FIX_MESSAGE

	; 汎用口上
	; 残りMP 66%以上
	IF BASE:1 >= (MAXBASE:1 / 100 * 66)

	; 残りMP 33%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 33)
		SELECTCASE KOJO_1_KOJO_MODE
		CASEELSE
			CALL KOJO_1_0_ADD_MESSAGE, @"「こうげきだー！」\n"
		ENDSELECT

	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
	ENDIF
RETURN 1
